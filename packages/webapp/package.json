{
  "name": "@sonarwatch/portfolio-webapp",
  "version": "0.0.1",
  "type": "commonjs",
  "description": "Backend service for Portfolio",
  "scripts": {
    "start": "node -r ts-node/register --max-old-space-size=3049 ./src/server.ts",
    "dev": "nodemon --exec ts-node ./src/server.ts",
    "test": "test",
    "build": "tsc --noEmit",
    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "lint:check": "eslint .",
    "lint:fix": "eslint --fix .",
    "docker:build": "docker build . -t portfolio:latest",
    "docker:run": "docker run --rm -it portfolio:latest"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "fastify": "5.3.2",
    "fastify-metrics": "^12.1.0",
    "pino": "9.6.0",
    "pino-pretty": "13.0.0",
    "libsodium": "0.7.13",
    "ts-node": "10.9.2",
    "typescript": "~5.3.2",
    "@mongodb-js/zstd": "^2.0.1",
    "@sonarwatch/token-registry": "1.1.65"
  }
}

